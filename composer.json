{
    "name": "revolution/laravel-boost-phpstorm-copilot",
    "description": "Laravel Boost Custom Agent for PhpStorm with GitHub Copilot plugin",
    "keywords": [
        "laravel",
        "boost",
        "phpstorm",
        "github-copilot"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.30",
        "laravel/boost": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "mockery/mockery": "^1.6",
        "revolution/laravel-boost-copilot-cli": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Revolution\\Laravel\\Boost\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "puklipo"
        },
        {
            "name": "kawax",
            "email": "kawaxbiz@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Revolution\\Laravel\\Boost\\PhpStormCopilotServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --coverage-clover build/logs/clover.xml",
        "lint": [
            "pint"
        ],
        "test:lint": [
            "pint --test"
        ],
        "boost": "vendor/bin/testbench boost:install --no-interaction --ansi",
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@build"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
